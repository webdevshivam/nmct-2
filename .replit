args = "php -S 0.0.0.0:5000 -t public"
waitForPort = 5000

[[workflows.workflow]]
name = "Server Port 8080"
author = 45803003
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:8080 -t public"

[[ports]]
